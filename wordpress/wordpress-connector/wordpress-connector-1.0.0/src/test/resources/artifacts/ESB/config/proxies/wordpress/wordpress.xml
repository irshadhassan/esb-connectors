                <case regex="urn:getNotification">
                    <wordpress.getNotification>
                        <note_id>{$ctx:note_id}</note_id>
                        <fields>{$ctx:fields}</fields>
                        <num_note_items>{$ctx:num_note_items}</num_note_items>
                    </wordpress.getNotification>
                </case>
            </switch>
			<respond/>
		</inSequence>
		<outSequence>
			<log/>
			<send/>
		</outSequence>
	</target>
	<description/>
</proxy>