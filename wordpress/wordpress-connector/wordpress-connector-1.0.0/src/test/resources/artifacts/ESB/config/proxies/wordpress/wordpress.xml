                <case regex="urn:getSearchTerms">
                    <wordpress.getSearchTerms>
                        <http_envelope>{$ctx:http_envelope}</http_envelope>
                        <pretty>{$ctx:pretty}</pretty>
                        <meta>{$ctx:meta}</meta>
                        <fields>{$ctx:fields}</fields>
                        <date>{$ctx:date}</date>
                        <days>{$ctx:days}</days>
                    </wordpress.getSearchTerms>
                </case>
                <case regex="urn:batchRequest">
                    <wordpress.batchRequest>
